{
	"name": "@natlibfi/melinda-rest-api-http",
	"description": "RESTful API for Melinda",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-rest-api-http",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-rest-api-http/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-rest-api-http.git"
	},
	"license": "AGPL-3.0+",
	"version": "2.1.1",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=14"
	},
	"scripts": {
		"start": "node ./dist/index",
		"start:dev": "babel-node ./src/index",
		"lint": "eslint src",
		"lint:dev": "eslint --fix src",
		"test": "npm run lint",
		"dev": "NODE_ENV=development cross-env DEBUG=1 nodemon",
		"build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist",
		"prod": "NODE_ENV=production npm run build && npm run start"
	},
	"dependencies": {
		"@babel/runtime": "^7.17.2",
		"@natlibfi/marc-record-serializers": "^8.1.0",
		"@natlibfi/melinda-backend-commons": "^2.0.5",
		"@natlibfi/melinda-commons": "^12.0.3",
		"@natlibfi/melinda-rest-api-commons": "^2.2.0-alpha.1",
		"@natlibfi/passport-melinda-aleph": "^2.0.2",
		"@natlibfi/sru-client": "^5.0.1",
		"body-parser": "^1.19.2",
		"express": "^4.17.3",
		"http-status": "^1.5.0",
		"moment": "^2.29.1",
		"mongo-sanitize": "^1.1.0",
		"nodemon": "^2.0.15",
		"passport": "^0.5.2",
		"passport-http": "^0.3.0",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.16.0",
		"@babel/core": "^7.16.0",
		"@babel/eslint-parser": "^7.16.3",
		"@babel/node": "^7.16.0",
		"@babel/preset-env": "^7.16.0",
		"@babel/register": "^7.16.0",
		"@natlibfi/eslint-config-melinda-backend": "^2.0.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.10.0"
	},
	"eslintConfig": {
		"extends": "@natlibfi/melinda-backend"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": "maintained node versions"
				}
			]
		]
	},
	"nodemonConfig": {
		"exec": "npm run lint:dev && npm run start:dev",
		"watch": [
			"src/*"
		],
		"ext": "js",
		"delay": 2.5
	}
}
