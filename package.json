{
	"name": "@natlibfi/melinda-rest-api-http",
	"description": "RESTful API for Melinda",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-rest-api-http",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-rest-api-http/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-rest-api-http.git"
	},
	"license": "MIT",
	"version": "3.7.0",
	"main": "dist/index.js",
	"type": "module",
	"engines": {
		"node": ">=22"
	},
	"scripts": {
		"prepare": "npm run build",
		"start": "node ./dist/index.js",
		"lint": "eslint src",
		"lint:dev": "eslint --fix src",
		"test": "npm run lint",	
		"prod": "NODE_ENV=production npm run build && npm run start",
		"build": "esbuild \"src/**/*.js\" --sourcemap --platform=node --outdir=dist"
	},
	"todo_scripts": {
		"test:base": "node --test --test-force-exit --experimental-test-coverage --test-reporter=spec './test/*.test.js' './test/**/*.test.js'",
		"dev:test": "cross-env DEBUG=@natlibfi/* LOG_LEVEL=debug NODE_ENV=test node --watch --test --experimental-test-coverage --test-reporter=spec './test/*.test.js' './test/**/*.test.js'"
	},
	"dependencies": {
		"@natlibfi/marc-record-serializers": "^11.0.0-alpha.2",
		"@natlibfi/melinda-backend-commons": "^3.0.0-alpha.5",
		"@natlibfi/melinda-commons": "^14.0.0-alpha.3",
		"@natlibfi/melinda-rest-api-commons": "^5.0.0-alpha.2",
		"@natlibfi/passport-melinda-aleph": "^4.0.0-alpha.5",
		"@natlibfi/sru-client": "^7.0.0-alpha.1",
		"body-parser": "^2.2.0",
		"express": "^4.21.2",
		"http-status": "^2.1.0",
		"ip-range-check": "^0.2.0",
		"moment": "^2.30.1",
		"mongo-sanitize": "^1.1.0",
		"passport": "^0.7.0",
		"uuid": "^11.1.0"
	},
	"devDependencies": {
		"cross-env": "^10.0.0",
		"esbuild": "^0.25.9",
		"eslint": "^9.34.0"
	},
	"overrides": {
		"nanoid": "^3.3.8"
	}
}
